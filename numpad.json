{
  "title": "Numeric Keypad",
  "rules": [
    {
      "description": "Numeric Keypad Trigger [Left alt caps Lock trigger key]",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 0
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "left_alt"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "numeric_keypad_mode",
                "value": 1
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Numeric Keypad Mode",
